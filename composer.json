{
	"name": "akeeba/panopticon",
	"type": "project",
	"description": "Self-hosted site monitoring and management",
	"keywords": [
		"monitoring",
		"joomla",
		"updates"
	],
	"homepage": "https://github.com/akeeba/panopticon",
	"license": "AGPL-3.0-or-later",
	"authors": [
		{
			"name": "Nicholas K. Dionysopoulos",
			"email": "nicholas_NO_SPAM_PLEASE@akeeba.com",
			"homepage": "http://www.dionysopoulos.me",
			"role": "Lead Developer"
		}
	],
	"support": {
		"email": "https://github.com/akeeba/panopticon/issues",
		"wiki": "https://github.com/akeeba/panopticon/wiki",
		"security": "https://github.com/akeeba/panopticon/security/policy",
		"source": "https://github.com/akeeba/panopticon"
	},
	"funding": [
		{
			"type": "paypal",
			"url": "https://www.paypal.com/donate/?hosted_button_id=NFUWUURA6X3TS"
		}
	],
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/akeeba/remotecli"
		},
		{
			"type": "vcs",
			"url": "https://github.com/akeeba/awf"
		}
	],
	"require": {
		"php": ">=8.1",
		"ext-curl": "*",
		"ext-mbstring": "*",
		"ext-json": "*",
		"ext-zip": "*",
		"akeeba/awf": "dev-development",
		"akeeba/remotecli": "^3.0.0",
		"cesargb/php-log-rotation": "^2.7.1",
		"composer/ca-bundle": "^1.3.4",
		"delight-im/random": "^1.0",
		"dragonmantank/cron-expression": "^3.3.2",
		"guzzlehttp/guzzle": "^7.5",
		"kevinrob/guzzle-cache-middleware": "^4.0",
		"league/commonmark": "^2.4",
		"mcrumley/php-complexify": "^0.4.1",
		"monolog/monolog": "^3.3.1",
		"symfony/cache": "^6.2",
		"symfony/console": "^6.2.7",
		"symfony/error-handler": "^6.2"
	},
	"suggest": {
		"ext-pdo": "*",
		"ext-simplexml": "*",
		"ext-zend-opcache": "*"
	},
	"config": {
		"optimize-autoloader": true,
		"platform": {
			"php": "8.1.0"
		}
	},
	"autoload": {
		"psr-4": {
			"Akeeba\\Panopticon\\": [
				"src",
				"user_code"
			]
		}
	},
	"archive": {
		"exclude": [
			"/.github",
			"/.idea",
			"/.htaccess",
			"/1",
			"/assets",
			"/build",
			"/cache",
			"!/cache/.htaccess",
			"!/cache/web.config",
			"/config.php",
			"/documentation",
			"/log",
			"!/log/.htaccess",
			"!/log/web.config",
			"/node_modules",
			"/release",
			"/tmp",
			"!/tmp/.htaccess",
			"!/tmp/web.config",
			"/vendor",
			"/user_code",
			"!/user_code/.gitkeep",
			"/.gitattributes",
			"/.gitignore",
			"/build.xml",
			"/CHANGELOG",
			"/package*.json",
			"README.md",
			"RELEASENOTES.md",
			"TODO.md"
		]
	},
	"process-timeout": 600,
	"scripts": {
		"npm-deps": [
			"npm install",
			"\\Akeeba\\Panopticon\\Composer\\InstallationScript::copyNodeDependencies"
		],
		"post-install-cmd": [
			"@npm-deps",
			"\\Akeeba\\Panopticon\\Composer\\InstallationScript::postComposerUpdate"
		],
		"post-update-cmd": [
			"@npm-deps",
			"\\Akeeba\\Panopticon\\Composer\\InstallationScript::postComposerUpdate"
		],
		"pre-archive-cmd": [
			"@npm-deps"
		],
		"post-create-project-cmd": [
			"@composer dump-autoload -a",
			"\\Akeeba\\Panopticon\\Composer\\InstallationScript::postComposerUpdate",
			"@npm-deps"
		]
	}
}
